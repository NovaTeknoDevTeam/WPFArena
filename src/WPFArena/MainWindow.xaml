<Window x:Class="WPFArena.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFArena"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Layout And Panelse">
                    <MenuItem Header="Grid Demo" Click="GridDemo_Click"></MenuItem>
                    <MenuItem Header="Dynamic Grid Sizing" Click="DynamicGridSizing_Click"></MenuItem>
                    <MenuItem Header="Scrollable View" Click="ScrollableView_Click"></MenuItem>
                    <MenuItem Header="Border Demo" Click="BorderDemo_Click"></MenuItem>
                    <MenuItem Header="Canvas Demo" Click="CanvasDemo_Click"></MenuItem>
                    <MenuItem Header="Canvas Demo 2" Click="CanvasDemo2_Click"></MenuItem>
                    <MenuItem Header="Tabbed UI" Click="TabbedUI_Click"></MenuItem>
                    <MenuItem Header="Dynamic Tabbed UI" Click="DynamicTabbedUI_Click"></MenuItem>
                    <MenuItem Header="Drag and Drop Example" Click="DragAndDropDemo_Click"></MenuItem>
                </MenuItem>
                <MenuItem Header="Standard Controls">
                    <MenuItem Header="TextBox Demo" Click="TextBoxDemo1_Click"/>
                    <MenuItem Header="ContentControl Demo" Click="ContentControlDemo_Click"/>
                    <MenuItem Header="HeaderedContentControl Demo" Click="HeaderedContentControlDemo_Click"/>
                    <MenuItem Header="Images Demo" Click="ImagesDemo_Click"/>
                    <MenuItem Header="Drawing Image Demo" Click="DrawingImageDemo_Click"/>
                    <MenuItem Header="Bitmap Image Demo" Click="BitmapImageDemo_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
