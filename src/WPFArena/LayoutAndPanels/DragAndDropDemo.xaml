<Window x:Class="WPFArena.LayoutAndPanels.DragAndDropDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFArena.LayoutAndPanels"
        mc:Ignorable="d"
        Title="DragAndDropDemo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="2" BorderBrush="Black">
            <Canvas x:Name="_source" Background="White" MouseLeftButtonDown="OnBeginDrag"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="2">
            <WrapPanel ItemWidth="50" ItemHeight="50" x:Name="_target" Background="Yellow" Drop="_target_OnDrop" DragEnter="_target_OnDragEnter" DragOver="_target_OnDragOver" DragLeave="_target_OnDragLeave" AllowDrop="True"></WrapPanel>
        </Border>
    </Grid>
</Window>
